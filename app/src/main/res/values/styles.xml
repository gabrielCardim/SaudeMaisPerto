<resources>

    <style name="CloseButtonAsUpIndicator" parent="Base">
        <item name="android:homeAsUpIndicator">@drawable/ic_close</item>
    </style>

    <style name="WhiteStatusBar" parent="Base">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TransparentStatusBar" parent="Base">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="NoActionBar" parent="Base">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NoAnimations" parent="WhiteStatusBar">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/azul_claro</item>
        <item name="colorPrimaryDark">@color/azul_escuro</item>
        <item name="colorAccent">@color/azul_claro</item>
        <item name="android:windowBackground">@color/branco</item>
    </style>

    <!-- Widgets: -->

    <style name="MiniRatingBar" parent="Base.Widget.AppCompat.RatingBar.Small">
    </style>

    <style name="TituloExpandido" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="Separador">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/cinza_1</item>
    </style>

</resources>
